<!DOCTYPE html>
<html>
  <head>
    <title>Educated Angles</title>
    <meta name="description" content="{{discription}}">
    <link rel="canonical" href="https://educatedangles.org">
    <link href="https://fonts.googleapis.com/css?family=Crimson+Text:400,700|Montserrat:400,500,700" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" type="text/css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/main.css' />
  </head>
  <body>
    <header>
      <div class='header-bar'>
        <div class='logo'><img src='images/logo.png'></div>
        <div class='header-links'>
        {% for title in titles %}
        <a href='#{{title[0]}}'>{{title[1]}}</a>
        {% endfor %}
        </div>
        <a href='#' class='fb-link'><i class="fa fa-facebook" aria-hidden="true"></i></a>
      </div>
    </header>
    <div class='media-boxes'>
      <div id='box1' style='background-image: url(images/plane.png)' >
        <div class="color-overlay"></div>
        <p class='title'>Helping folks in Houston</p>
      </div>
      <div id='box2' style='background-image: url(images/video_thumb.png)'>
        <div class="color-overlay"></div>
        <p class='title'>2017 Summery Video</p>
      </div>
      <div id='box3' style='background-image: url(images/boxes.png)'>
      <a href='#get_in_touch'>
        <div class="color-overlay"></div>
        <p class='title'>Get in touch</p>
      </a>
      </div>
    </div>
    <div class='call-to-action'>
      <h1>{{call_to_action}}</h1>
      <div class="fb-like" data-href="https://www.facebook.com/educatedangels" data-layout="button_count" data-action="like" data-size="small" data-show-faces="true" data-share="false"></div>  
    </div>
    <div class='events-container'>
      <h1 id='upcoming_events'>Upcoming Events</h1>
      <ul>
        {% for event in facebook %}
        <li>
          <div class='date'>
            <p>{{event.month}}</p>
            <p>{{event.day}}</p>
          </div>
          <div class='event-titles'>
            <p>{{event.name}}</p>
            <p>by Educated Angles</p>
          </div>
          <div class='event-extra-info'>
          {% if event.place.location %}
            <p>{{event.place.name}}</p>
            <p>{{event.place.location.city}}, {{event.place.location.state}}</p>
          {% endif %}
          </div>
          <a href='https://www.facebook.com/events/{{event.id}}'>Learn More</a>
        </li>
      {% endfor %}
      </ul>
    </div>

    <div class='gallery'>
      {% for photo in photos %}
      <a href='https://www.facebook.com/educatedangels/photos/{{photo.id}}'><div class='img' style='background-image: url("{{photo.s3url}}")'><div class="color-overlay2"><p>View</p></div></div></a>
      {% endfor %}
    </div>

    <div class='events-container'>
      <h1 id='volunteer_opportunities'>Volunteer Opportunities</h1>
      <ul>
      {% for event in signupgenius %}
        <li>
          <div class='date'>
            <p>{{event.month}}</p>
            <p>{{event.day}}</p>
          </div>
          <div class='event-titles'>
            <p>{{event.title}}</p>
            <p>by {{event.group}}</p>
          </div>
          <div class='event-extra-info'>
          {% if event.place.location %}
            <p>{{event.place.name}}</p>
            <p>{{event.place.location.city}}, {{event.place.location.state}}</p>
          {% endif %}
          </div>
          <a href='{{event.signupurl}}'>Register</a>
        </li>
      {% endfor %}
      </ul>
    </div>

    <div class='story-wrapper'>
      <div class='story-bg'  style='background-image: url("images/ppl_bg.png")'></div>
      <div class='story'>{{story1}}</div>
      <div class='story-sidebar'>
        {{side_bar}}
      </div>
    </div>

    <div class='story-wrapper'>
      <div class='story-bg'  style='background-image: url("images/classroom.png")'></div>
      <div class='story'>{{story2}}</div>
      <div class='story-sidebar'>
        {{side_bar2}}
      </div>
    </div>

    <div class='story-wrapper'>
      <div class='story-bg'  style='background-image: url("images/classroom.png")'></div>
      <div class='story'>{{story3}}</div>
      <div class='story-sidebar'>
        {{side_bar3}}
      </div>
    </div>

    <footer>
      <div>
        <div>
          <div class='logo'><img src='images/logo.png'></div>
          <p><strong>Educated Angles</strong></p>
        </div>
        
        <p><strong>Phone:</strong>  254-462-7712</p>
        <p><strong>Email:</strong>  educatedangles2012@gmail.com</p>
      </div>
    </footer>

    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '801485336656969',
          cookie     : true,
          xfbml      : true,
          version    : 'v2.8'
        });
          
        FB.AppEvents.logPageView();   
          
      };

      (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>
  </body>
</html>

